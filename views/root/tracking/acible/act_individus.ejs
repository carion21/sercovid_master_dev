<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card">
            <div class="card-header card-header-primary">
                <h3 class="card-title">
                    Liste de toutes les cibles
                </h3>
                <p class="card-category">
                    Type Individus
                </p>
            </div>
            <div class="card-body">
                <% if(locals.info == "yes") {%> 
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="text-primary">
                            <th>
                                Identifiant
                            </th>
                            <th>
                                Téléphone
                            </th>
                            <th>
                                Sexe
                            </th>
                            <th>
                                Statut
                            </th>
                            <th>
                                Actif ?
                            </th>
                            <th>
                                Plus de détails
                            </th>
                            <th>
                                Tracking Spécial
                            </th>
                        </thead>
                        <tbody>
                            <% for(cible of i_cibles) { %> 
                            <tr>
                                <td>
                                    <%= cible.codeIndividu %> 
                                </td>
                                <td>
                                    <%= cible.telephone %> 
                                </td>
                                <td>
                                    <% if(cible.sexe == "homme") {%>
                                        <span">Masculin</span>
                                            <% } else {%>
                                            <span">Féminin</span>
                                                <% } %>
                                </td>
                                <td>
                                    <% if(cible.statut == 0) { %>
                                        <span class="text-success">
                                            <b>
                                                Sain
                                            </b>
                                        </span>
                                        <% } %>
                                        <% if(cible.statut == 1) { %>
                                        <span class="text-warning">
                                            <b>
                                                Suspect
                                            </b>
                                        </span>
                                        <% } %>
                                        <% if(cible.statut == 2) { %>
                                        <span class="text-danger">
                                            <b>
                                                Non Sain
                                            </b>
                                        </span>
                                        <% } %>
                                </td>
                                <td>
                                    <% if(cible.connect == 1) { %>
                                        <span class="text-success">
                                            <b>
                                                Oui
                                            </b>
                                        </span>
                                        <% } else { %>
                                        <span class="text-danger">
                                            <b>
                                                Non
                                            </b>
                                        </span>
                                        <% } %>
                                </td>
                                <td>
                                    <a href="/root/gestion_individus/voir/<%= cible.codeIndividu %> "
                                        class="btn btn-primary btn-round">
                                        Voir Plus
                                    </a>
                                </td>
                                <td>
                                    <a href="/root/tracking/individus/tracking_special/<%= cible.codeIndividu %> "
                                        class="btn btn-success btn-round">
                                        Effectuer Ici
                                    </a>
                                </td>
                            </tr>
                            <% } %> 
                        </tbody>
                    </table>
                </div>
            <% } else { %> 
                <div class="alert alert-warning" style="text-align: center; color: black;">
                    <h3>
                        <%= locals.resultatVide %>
                    </h3>
                </div>
            <% } %> 
            </div>
        </div>
    </div>
</div>