<%- extend('../../dashbase.ejs') %>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h3 class="card-title ">Liste des individus par catégorie</h3>
                <% if(locals.type == 0) { %> 
                    <p class="card-category"> Toutes les catégories  </p>
                <% } %> 
                <% if(locals.type == 1) { %> 
                    <p class="card-category"> Toutes les individus actifs  </p>
                <% } %> 
                <% if(locals.type == 2) { %> 
                    <p class="card-category"> Toutes les individus non actifs  </p>
                <% } %> 
                <% if(locals.type == 3) { %> 
                    <p class="card-category"> Toutes les individus sains  </p>
                <% } %> 
                <% if(locals.type == 4) { %> 
                    <p class="card-category"> Toutes les individus suspects  </p>
                <% } %> 
                <% if(locals.type == 5) { %> 
                    <p class="card-category"> Toutes les individus infectés  </p>
                <% } %> 
                
            </div>
            <div class="card-body">
                <% if(locals.info == "yes") {%>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class=" text-primary">
                            <th>
                                ID
                            </th>
                            <th>
                                Sexe
                            </th>
                            <th>
                                Age
                            </th>
                            <th>
                                Statut
                            </th>
                            <th>
                                Actif ?
                            </th>
                            <th>
                                Plus d'infos
                            </th>
                        </thead>
                        <tbody>
                            <% for(individu of individus) {%>
                            <tr>
                                <td>
                                    <%= individu.codeIndividu %>
                                </td>
                                <td>
                                    <% if(individu.sexe == "homme") {%>
                                    <span">Masculin</span>
                                        <% } else {%>
                                        <span">Féminin</span>
                                            <% } %>
                                </td>
                                <td>
                                    <%= individu.age %> 
                                </td>
                                <td>
                                    <% if(individu.statut == 0) { %>
                                    <span class="text-success">
                                        <b>
                                            Sain
                                        </b>
                                    </span>
                                    <% } %>
                                    <% if(individu.statut == 1) { %>
                                    <span class="text-warning">
                                        <b>
                                            Suspect
                                        </b>
                                    </span>
                                    <% } %>
                                    <% if(individu.statut == 2) { %>
                                    <span class="text-danger">
                                        <b>
                                            Non Sain
                                        </b>
                                    </span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if(individu.connect == 1) { %>
                                    <span class="text-success">
                                        <b>
                                            Oui
                                        </b>
                                    </span>
                                    <% } else { %>
                                    <span class="text-danger">
                                        <b>
                                            Non
                                        </b>
                                    </span>
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/root/gestion_individus/voir/<%= individu.codeIndividu %> "
                                        class="btn btn-primary btn-round">
                                        Voir Plus
                                    </a>
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                <div class="alert alert-warning" style="text-align: center; color: black;">
                    <h3>
                        <%= locals.resultatVide %>
                    </h3>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>